<%= form_with(model: [ @hotel, @hotel_rule ], local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control mt-2 mb-2' %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_field :description, class: 'form-control mt-2 mb-2' %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
