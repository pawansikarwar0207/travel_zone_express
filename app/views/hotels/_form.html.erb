<%= form_with model: hotel do |form| %>
	<div class="form-group">
		<%= form.label :hotel_name %>
		<%= form.text_field :hotel_name, class: 'form-control mt-2 mb-2 rounded-0' %>
	</div>

	<div class="form-group">
		<%= form.label :description %>
		<%= form.text_area :description, class: 'form-control mt-2 mb-2 rounded-0' %>
	</div>

	<div class="form-group">
		<%= form.label :address %>
		<%= form.text_field :address, class: 'form-control mt-2 mb-2 rounded-0' %>
	</div>

	<div class="form-group">
		<%= form.label :property_type %>
		<%= form.select :property_type, Hotel::PROPERTY_TYPE, { prompt: true }, {class: 'form-select mt-2 mb-2 rounded-0'} %>
	</div>

	<div class="form-group">
		<%= form.label :highlights %>
		<%= form.text_area :highlights, class: 'form-control mt-2 mb-2 rounded-0' %>
	</div>

	<div class="form-group">
		<%= form.label :contact_number %>
		<%= form.text_field :contact_number, class: 'form-control mt-2 mb-2 rounded-0' %>
	</div>

	<div class="form-group">
		<%= form.label :price_per_night %>
		<%= form.text_field :price_per_night, class: 'form-control mt-2 mb-2 rounded-0' %>
	</div>

	<div class="form-group">
		<%= form.label :images %>
		<%= form.file_field :images, multiple: true, class: 'form-control mt-2 mb-2 rounded-0' %>
	</div>

	<%= form.submit class: 'btn btn-success rounded-0 mt-2' %>
<% end %>