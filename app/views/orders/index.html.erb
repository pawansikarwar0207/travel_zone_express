<h1 class="page-title">All Orders</h1>

<table class="orders-table">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Date</th>
      <th>Items</th>
      <th>Total Amount</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.created_at.strftime("%d-%m-%Y %H:%M") %></td>
        <td>
          <ul class="order-items-list">
            <% order.order_items.each do |order_item| %>
              <li>
                <%= order_item.food_item.name %> 
                (Qty: <%= order_item.quantity %>)
              </li>
            <% end %>
          </ul>
        </td>
        <td>$<%= number_with_precision(order.total_amount, precision: 2) %></td>
        <td><%= order.status.present? ? order.status.titleize : "Pending" %></td>
        <td class="actions-column">
          <%= link_to "View", order_path(order), class: "view-link" %>
          <% if order.status != "Delivered" %>
            <%= form_with url: order_path(order), method: :patch, local: true do |form| %>
              <%= form.hidden_field :status, value: "Delivered", name: "order[status]" %>
              <%= form.submit "Mark as Delivered", class: "delivered-link" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<style>
  /* Global Styles */
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f7fb;
    margin: 0;
    padding: 0;
  }

  .page-title {
    text-align: center;
    margin-top: 40px;
    font-size: 2.5rem;
    color: #333;
    font-weight: 700;
  }

  /* Table Styles */
  .orders-table {
    width: 85%;
    margin: 40px auto;
    border-collapse: collapse;
    background-color: #fff;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    overflow: hidden;
  }

  .orders-table th, .orders-table td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  .orders-table th {
    background-color: #4CAF50;
    color: white;
    font-size: 1.1rem;
    text-transform: uppercase;
  }

  .orders-table tr:hover {
    background-color: #f1f1f1;
  }

  .orders-table td {
    font-size: 1rem;
    color: #555;
  }

  /* List of items styling */
  .order-items-list {
    margin: 0;
    padding-left: 20px;
  }

  .order-items-list li {
    font-size: 0.95rem;
    color: #777;
    margin-bottom: 5px;
  }

  /* Button Styles */
  .view-link, .delivered-link {
    padding: 10px 20px;
    border-radius: 5px;
    font-weight: bold;
    text-decoration: none;
    margin-top: 10px;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .view-link {
    background-color: #3498db;
    color: white;
    margin-right: 10px;
  }

  .delivered-link {
    background-color: #e67e22;
    color: white;
  }

  .view-link:hover {
    background-color: #2980b9;
    transform: translateY(-2px);
  }

  .delivered-link:hover {
    background-color: #d35400;
    transform: translateY(-2px);
  }

  /* Aligning buttons side by side */
  .actions-column {
    display: flex;
    align-items: center;
  }

  /* Hover Effect for Table Rows */
  .orders-table tr:hover {
    background-color: #eaf0f3;
    cursor: pointer;
  }
  
  /* Mobile Responsiveness */
  @media screen and (max-width: 768px) {
    .orders-table {
      width: 95%;
    }

    .view-link, .delivered-link {
      font-size: 0.85rem;
      padding: 8px 16px;
    }
  }
</style>
