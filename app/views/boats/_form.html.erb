<div class="container">
	<%= form_with(model: @boat, local: true) do |form| %>
		<% if @boat.errors.any? %>
	  	<div class="card alert alert-danger">
		    <div id="error_explanation">
		      <h2><%= pluralize(@boat.errors.count, "error") %> prohibited this boat from being saved:</h2>
		      <ul>
		        <% @boat.errors.full_messages.each do |message| %>
		          <li><%= message %></li>
		        <% end %>
		      </ul>
		    </div>
	  	</div>
		<% end %>

	  <div class="form-group">
	    <%= form.label :name %>
	    <%= form.text_field :name, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= form.label :rating %>
	    <%= form.number_field :rating, step: 0.1, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= form.label :reviews_count %>
	    <%= form.number_field :reviews_count, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= form.label :passengers %>
	    <%= form.number_field :passengers, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= form.label :crew %>
	    <%= form.number_field :crew, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= form.label :price %>
	    <%= form.number_field :price, step: 0.01, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= form.label :description %>
	    <%= form.text_area :description, rows: 3, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= form.label :manufacturer %>
	    <%= form.text_field :manufacturer, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= form.label :model %>
	    <%= form.text_field :model, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= form.label :year %>
	    <%= form.number_field :year, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= form.label :engines %>
	    <%= form.text_field :engines, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= form.label :fuel %>
	    <%= form.text_field :fuel, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= form.label :available %>
	    <%= form.check_box :available, class: "form-check-input mt-2 mx-3" %>
	  </div>

	  <div class="form-group">
	    <%= form.label :rental_price %>
	    <%= form.number_field :rental_price, step: 0.01, class: "form-control" %>
	  </div>

	  <div class="form-group">
	    <%= form.submit class: "btn btn-primary" %>
	  </div>
	<% end %>
</div>