<h1 class="menu-heading">Fast Food Menu</h1>
<div class="menu-container">
  <% @food_items.each do |food_item| %>
    <div class="menu-item">
      <%= image_tag asset_path(food_item.photo_url), alt: food_item.name, class: 'food-photo' %>
      <h2 class="item-name"><i class="fas fa-utensils"></i> <%= food_item.name %></h2>
      <p class="item-description"><%= food_item.description %></p>
      <p class="item-price"><i class="fas fa-dollar-sign"></i> <strong>Price:</strong> $<%= number_with_precision(food_item.price, precision: 2) %></p>
      <p class="item-time"><i class="fas fa-clock"></i> <strong>Preparation Time:</strong> <%= food_item.preparation_time %> minutes</p>
      <%= button_to 'Add to Order', new_order_path(food_item_ids: [food_item.id]), method: :get, class: 'order-button' %>
    </div>
  <% end %>
</div>

<style>
  .menu-heading {
    text-align: center;
    margin-bottom: 30px;
    font-family: 'Georgia', serif;
    font-size: 2.5rem;
    color: #2c3e50;
  }

  .menu-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    padding: 20px;
  }

  .menu-item {
    border: 1px solid #e0e0e0;
    border-radius: 15px;
    padding: 20px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    transition: transform 0.3s, box-shadow 0.3s;
    background-color: #ffffff;
  }

  .menu-item:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .food-photo {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 10px;
    margin-bottom: 15px;
  }

  .item-name {
    font-size: 1.5rem;
    margin-bottom: 10px;
    color: #34495e;
  }

  .item-description {
    font-size: 1rem;
    margin-bottom: 15px;
    color: #7f8c8d;
  }

  .item-price, .item-time {
    font-size: 1rem;
    margin-bottom: 5px;
  }

  .order-button {
    display: inline-block;
    margin-top: 15px;
    background-color: #e74c3c;
    color: #fff;
    border: none;
    padding: 10px 20px;
    text-align: center;
    border-radius: 25px;
    cursor: pointer;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s;
  }

  .order-button:hover {
    background-color: #c0392b;
  }

  i {
    margin-right: 5px;
  }
</style>
