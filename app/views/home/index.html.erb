<div class="hero-section text-white">
  <!-- Render the custom home header -->
  <%= render 'shared/home_header' %>

  <div class="hero-image">
    <%= image_tag 'image-549x4551.jpg', class: "image-background", alt: "Hero Background" %>
    <div class="hero-content text-white">
      <h1 class="display-3 fw-bold">Welcome To Zone Express!</h1>
      <p class="fs-4 text-white">Find awesome hotel, tour, car, and activities in London</p>
    </div>
  </div>
</div>


<style>
  /* Ensure the wrapper takes up the full viewport height */
  .hero-section {
    position: relative;
    height: 100vh; /* Full viewport height */
    width: 100%;
  }

  /* Style the background image */
  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1; /* Make sure it's behind the content */
  }

  .hero-image img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    position: absolute;
  }

  /* Ensure the header is positioned correctly on top of the image */
  .hero-section .navbar {
    position: relative;
    z-index: 10; /* Ensures the header stays above the background */
  }

  .navbar.navbar-expand-md {
    background-color: transparent; /* Make the header transparent so the image is visible */
  }

  .hero-content {
    position: relative;
    text-align: center;
    top: 40%;
    font-weight: bold;
  }
</style>