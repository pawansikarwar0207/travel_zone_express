<div class="rewards-container">
  <h1 class="dashboard-title">🏆 Luxurious Rewards Dashboard</h1>

  <!-- Points Section -->
  <div class="points-container">
    <h2>Your Current Points: <span class="points"><%= @current_points %></span></h2>
  </div>

  <!-- Quests Section -->
  <div class="quests-container">
    <h3>✨ Daily Quest</h3>
    <div class="quest-card daily-quest">
      <p>Quest: <strong><%= @daily_quest[:title] %></strong></p>
      <p>Status: <span class="quest-status"><%= @daily_quest[:status] %></span></p>
      <p>Points: <span class="quest-points"><%= @daily_quest[:points] %> pts</span></p>
    </div>

    <h3>🌟 Weekly Quest</h3>
    <div class="quest-card weekly-quest">
      <p>Quest: <strong><%= @weekly_quest[:title] %></strong></p>
      <p>Status: <span class="quest-status"><%= @weekly_quest[:status] %></span></p>
      <p>Points: <span class="quest-points"><%= @weekly_quest[:points] %> pts</span></p>
    </div>

    <h3>💎 Monthly Quest</h3>
    <div class="quest-card monthly-quest">
      <p>Quest: <strong><%= @monthly_quest[:title] %></strong></p>
      <p>Status: <span class="quest-status"><%= @monthly_quest[:status] %></span></p>
      <p>Points: <span class="quest-points"><%= @monthly_quest[:points] %> pts</span></p>
    </div>
  </div>

  <!-- Dashboard Section -->
  <div class="dashboard-container">
    <h3>📊 Quest Status Dashboard</h3>

    <div class="status ongoing">
      <h4>🚀 Ongoing Quests</h4>
      <% @dashboard[:ongoing].each do |quest| %>
        <p>🔵 <%= quest[:title] %> - <%= quest[:points] %> pts</p>
      <% end %>
    </div>

    <div class="status successful">
      <h4>🏆 Successful Quests</h4>
      <% @dashboard[:successful].each do |quest| %>
        <p>🟢 <%= quest[:title] %> - <%= quest[:points] %> pts</p>
      <% end %>
    </div>

    <div class="status failed">
      <h4>❌ Failed Quests</h4>
      <% @dashboard[:failed].each do |quest| %>
        <p>🔴 <%= quest[:title] %> - <%= quest[:points] %> pts</p>
      <% end %>
    </div>
  </div>
</div>
