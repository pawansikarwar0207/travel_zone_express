<div class="container">
	<%= form_with model: @flight, local: true do |f| %>
	  <% if @flight.errors.any? %>
	  	<div class="card alert alert-danger">
		    <div id="error_explanation">
		      <h2><%= pluralize(@flight.errors.count, "error") %> prohibited this flight from being saved:</h2>
		      <ul>
		        <% @flight.errors.full_messages.each do |message| %>
		          <li><%= message %></li>
		        <% end %>
		      </ul>
		    </div>
	  	</div>
		<% end %>

	  <div class="form-group">
	    <%= f.label :flight_number %>
	    <%= f.text_field :flight_number, class: 'form-control' %>
	  </div>

	  <div class="form-group">
	    <%= f.label :departure_location %>
	    <%= f.text_field :departure_location, class: 'form-control' %>
	  </div>

	  <div class="form-group">
	    <%= f.label :arrival_location %>
	    <%= f.text_field :arrival_location, class: 'form-control' %>
	  </div>

	  <div class="row">
	  	<div class="col-lg-6">
	  		<div class="form-group">
				  <%= f.label :take_off_time, class: 'form-label' %>
				  <%= f.datetime_select :take_off_time, { prompt: { day: 'Select day', month: 'Select month', year: 'Select year', hour: 'Select hour', minute: 'Select minute' } }, { class: 'form-select mt-1 mb-1' } %>
				</div>
	  	</div>
	  	<div class="col-lg-6">
				<div class="form-group">
				  <%= f.label :landing_time, class: 'form-label' %>
				  <%= f.datetime_select :landing_time, { prompt: { day: 'Select day', month: 'Select month', year: 'Select year', hour: 'Select hour', minute: 'Select minute' } }, { class: 'form-select mt-1 mb-1' } %>
				</div>
	  	</div>
	  </div>


	  <div class="form-group">
	    <%= f.label :seat_type %>
	    <%= f.text_field :seat_type, class: 'form-control' %>
	  </div>

	  <div class="form-group">
	    <%= f.label :baggage_checkin %>
	    <%= f.text_field :baggage_checkin, class: 'form-control' %>
	  </div>

	  <div class="form-group">
	    <%= f.label :baggage_cabin %>
	    <%= f.text_field :baggage_cabin, class: 'form-control' %>
	  </div>

	  <div class="form-group">
	    <%= f.label :price %>
	    <%= f.number_field :price, step: 0.01, class: 'form-control' %>
	  </div>

	  <div class="form-group">
	    <%= f.label :number_of_seats %>
	    <%= f.number_field :number_of_seats, class: 'form-control' %>
	  </div>

	  <div class="form-group">
	    <%= f.label :logo %>
	    <%= f.file_field :logo, class: 'form-control' %>
	  </div>

	  <div class="form-group">
	    <%= f.label :image %>
	    <%= f.file_field :image, class: 'form-control'%>
	  </div>

	  <div class="actions">
	    <%= f.submit class: 'btn btn-success' %>
	  </div>
	<% end %>

</div>