<h3>Add a Review</h3>

<%= form_with(model: [@hotel, @hotel.reviews.new], local: true) do |form| %>

  <% if @review.errors.any? %>
    <div class="alert alert-danger">
      <h5>There were errors with your review:</h5>
      <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :rating, "Rating (1-5)" %>
    <%= form.number_field :rating, in: 1..5, class: 'form-control mt-2 mb-2 rounded-0' %>
  </div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment, class: 'form-control mt-2 mb-2 rounded-0', rows: 3 %>
  </div>

  <%= form.submit "Submit Review", class: "btn btn-primary" %>
<% end %>
