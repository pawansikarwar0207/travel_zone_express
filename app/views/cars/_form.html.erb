<div class="container">
  <%= form_with(model: @car, local: true) do |form| %>

    <% if @car.errors.any? %>
      <div class="card alert alert-danger">
        <div id="error_explanation">
          <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>
          <ul>
            <% @car.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :brand %>
      <%= form.text_field :brand, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :model %>
      <%= form.text_field :model, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :price_per_day %>
      <%= form.number_field :price_per_day, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :available %>
      <%= form.check_box :available, class: "form-check-input mt-2 mx-3" %>
    </div>

    <div class="form-group">
      <%= form.label :photo, "Car Photo" %>
      <%= form.file_field :photo, class: 'form-control' %>
    </div>

    <div>
      <%= form.submit  class: 'btn btn-success'%>
    </div>
  <% end %>

</div>